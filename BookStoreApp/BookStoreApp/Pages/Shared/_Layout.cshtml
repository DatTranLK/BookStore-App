@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookStoreApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">BookStoreApp</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
                <div style="margin-left :50%">
                  @if (Context.Session.GetString("Role") == null && Context.Session.GetString("Username") == null)
                    {
                        <ul class="navbar-nav" style="color: Black">
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Register/RegisterPage">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Login/LoginPage">Login</a>
                            </li>

                        </ul>

                    }

                    @if (Context.Session.GetString("Role") == "1" && Context.Session.GetString("Username") != null)
                    {
                        <ul class="navbar-nav" style="color: Black">

                            <li class="nav-item" style="padding-top: 8px">
                                <p style="color: black">Welcome, Admin</p>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color: Black" asp-page="/Index" asp-page-handler="Logout">Logout</a>
                            </li>
                        </ul>
                    }
                    @if (Context.Session.GetString("Role") == "2" && Context.Session.GetString("Username") != null)
                    {
                        <ul class="navbar-nav" style="color: Black">
                            <li class="nav-item" style="padding-top: 8px">
                                <p style="color: black">Welcome, Importer</p>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color: Black" asp-page="/Index" asp-page-handler="Logout">Logout</a>
                            </li>
                        </ul>
                    }
                    @if (Context.Session.GetString("Role") == "3" && Context.Session.GetString("Username") != null)
                    {
                        <ul class="navbar-nav" style="color: Black">
                            <li class="nav-item" style="padding-top: 8px">
                                <p style="color: black">Welcome, Seller</p>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color: Black" asp-page="/Index" asp-page-handler="Logout">Logout</a>
                            </li>
                        </ul>
                    }
                    @if (Context.Session.GetString("Role") == "4" && Context.Session.GetString("Username") != null)
                    {
                        <ul class="navbar-nav" style="color: Black">
                            <li class="nav-item" style="padding-top: 8px">
                                <p style="color: black">Welcome, Customer</p>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color: Black" asp-page="/Index" asp-page-handler="Logout">Logout</a>
                            </li>
                        </ul>
                    }  
                </div>
            </div>
        </nav>
    </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - BookStoreApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
