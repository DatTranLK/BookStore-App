@page
@model BookStoreApp.Pages.Seller.BookListViewModel


<div>
    <h1>Book In Store</h1>
    <div class="row justify-content-start" style="margin-left: 1px;">
        <form class="form-inline" method="post">
            <div class="form-group">
                <input asp-for="SearchString" type="text" style="margin-right: 30px; padding: 5px; width: 650px;" placeholder="Search by Book,Amount ..." />
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookInStore[0].Book.Avatar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookInStore[0].Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookInStore[0].Book.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookInStore[0].Book.Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookInStore[0].Book.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookInStore[0].Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="list-wrapper">
        @foreach (var item in Model.BookInStore)
        {
            <tr class="list-item">

                <td>
                    <img style="height:190px; width:120px; border-style: solid;" src="@item.Book.Avatar" alt="watch">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    <a asp-page="./CartSeller" asp-route-id="@item.Id">Add to card</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
<div id="pagination-container"></div>
