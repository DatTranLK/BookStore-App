@page
@model BookStoreApp.Pages.Seller.BookViewModel

@if (Model.Role == "3")
{
    <section class="product_section layout_padding">
        <div class="container">
            <div class="row list-wrapper">
                @foreach (var item in Model.BookInStore)
                {
                    <div class="list-item card col-md-4" style="width: 18rem;">
                        <div style="width: 100%; height: 60%">
                            <img class="card-img-top" src="@item.Book.Avatar" style="width: 100%; height: 100%" alt="Card image cap">
                        </div>
                        <div class="card-body" style="width: 100%; height: 25%">

                            <a asp-page="/BookDetailPage" asp-route-id="@item.Id">
                                @Html.DisplayFor(modelItem => item.Book.Name)
                            </a>

                            <p class="card-text">@Html.DisplayFor(modelItem => item.Book.Price)</p>

                        </div>
                        @if (@Model.Username != null)
                        {
                            <div style="padding-bottom: 30px">
                                <a class="btn btn-warning" asp-page="./CartSeller" asp-route-id="@item.Book.Id">
                                    Add To Cart
                                </a>
                            </div>
                        }
                        else
                        {

                            <div style="padding-bottom: 30px">
                                <a asp-page="/Login/LoginPage" class="btn btn-warning">
                                    Add To Cart
                                </a>
                            </div>
                        }
                    </div>
                }
            </div>
            <div id="pagination-container"></div>
        </div>

    </section>
}
