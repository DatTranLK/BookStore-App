@page
@model BookStoreApp.Pages.Importer.ImportPage.IndexModel

@if (@Model.Role == "2")
{
   @foreach (var item in Model.Book)
  {
      <div class="col-md-2 list-item" style="margin: 10px;">
            <div class="card" style="width: 18rem; height: 500px;">
                <div style="height: 60%; width: 100%">
                    <img src="@item.Avatar" class="card-img-top" alt="error" style="width: 100%; height: 100%">
                </div>
                <div class="card-body" style="height: 30%; width: 100%">
                    <h7 class="card-title" style="font-size: 15px">@item.Name</h7>
                </div>
                <div style="text-align: center; margin-bottom: 10px;">
                    <a class="btn btn-primary" asp-page="./Import" asp-route-id="@item.Id">Add to import</a>
                </div>
            </div>
      </div>       
    }
}
else
{
    <p>You do not have permission to access</p>
}
