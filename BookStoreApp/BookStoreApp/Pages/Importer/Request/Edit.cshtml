@page
@model BookStoreApp.Pages.Importer.Request.EditModel

@if (@Model.Role == "2")
{
    <h1>Edit Import</h1>
    @if (@Model.Msg != null)
    {
        <p style="color: red;margin-left: 100px;margin-top: 15px;">@Model.Msg</p>
    }
    <hr />
    <div class="row">
        <div class="col-lg-12" style="margin-left: -550%; margin-top: 25%">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RequestBook.Id" />
                <div class="form-group" style="width: 200%">
                    <label asp-for="RequestBook.AddBookState" class="control-label"></label>
                    <input asp-for="RequestBook.AddBookState" class="form-control" required />
                    <span asp-validation-for="RequestBook.AddBookState" class="text-danger"></span>
                </div>
                <div class="form-group" style="width: 200%">
                    <label asp-for="RequestBook.CreateDate" class="control-label"></label>
                    <input type="datetime" asp-for="RequestBook.CreateDate" class="form-control" required />
                    <span asp-validation-for="RequestBook.CreateDate" class="text-danger"></span>
                </div>
                <div class="form-group" style="width: 200%">
                    <label asp-for="RequestBook.AcceptedImport" class="control-label"></label>
                    <input asp-for="RequestBook.AcceptedImport" class="form-control" readonly />
                </div>
                <div class="form-group" style="width: 200%">
                    <label asp-for="RequestBook.StaffId" class="control-label"></label>
                    <input type="number" asp-for="RequestBook.StaffId" class="form-control" readonly />
                </div>                
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
}
else
{
    Response.Redirect("/Login/LoginPage");
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
