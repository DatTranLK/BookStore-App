@using Microsoft.AspNetCore.Http
@{
    if (Context.Session.GetString("Role") == "1")
    {
        Layout = "_LayoutAdminPage";
    }
    else if (Context.Session.GetString("Role") == "2")
    {
        Layout = "_LayoutImporterPage";
    }
    else if (Context.Session.GetString("Role") == "3")
    {
        Layout = "_LayoutSellerPage";
    }
    else
    {
        Layout = "_Layout";
    }
}
