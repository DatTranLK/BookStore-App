@page
@model BookStoreApp.Pages.Admin.BookInStorePage.CreateModel

@{
    ViewData["Title"] = "Create";
}
<div>
    <h1>Create</h1>

    <h4>BookInStore</h4>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="BookInStore.BookId" class="control-label"></label>
                    <select asp-for="BookInStore.BookId" class="form-control" asp-items="ViewBag.BookId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="BookInStore.StoreId" class="control-label"></label>
                    <select asp-for="BookInStore.StoreId" class="form-control" asp-items="ViewBag.StoreId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="BookInStore.Amount" class="control-label"></label>
                    <input asp-for="BookInStore.Amount" class="form-control" />
                    <span asp-validation-for="BookInStore.Amount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
