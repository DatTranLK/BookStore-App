@page
@model BookStoreApp.Pages.Admin.AccountPage.CreateModel
@{
}
@if(@Model.Role == "1")
{
    <h1>Create New Account</h1>
    @if (@Model.Msg != null)
    { 
        <p style="color: red;margin-left: 100px;margin-top: 15px;">@Model.Msg</p>
    }
    <hr />
<div class="row">
    <div class="col-lg-12" style="margin-left: -500%; margin-top: 25%">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="width: 200%">
                <label asp-for="AccountInfo.Username" class="control-label"></label>
                <input asp-for="AccountInfo.Username" class="form-control" required/>
                <span asp-validation-for="AccountInfo.Username" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 200%">
                <label asp-for="AccountInfo.Password" class="control-label"></label>
                <input asp-for="AccountInfo.Password" class="form-control" required/>
                <span asp-validation-for="AccountInfo.Password" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 200%">
                <label asp-for="AccountInfo.Name" class="control-label"></label>
                <input asp-for="AccountInfo.Name" class="form-control" required/>
                <span asp-validation-for="AccountInfo.Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 200%">
                <label asp-for="AccountInfo.Avatar" class="control-label"></label>
                <input asp-for="AccountInfo.Avatar" class="form-control" required/>
                <span asp-validation-for="AccountInfo.Avatar" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 200%">
                <label asp-for="AccountInfo.Phone" class="control-label"></label>
                <input type="number" asp-for="AccountInfo.Phone" class="form-control" required/>
                <span asp-validation-for="AccountInfo.Phone" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 200%">
                <label asp-for="AccountInfo.DateOfBirth" class="control-label"></label>
                <input asp-for="AccountInfo.DateOfBirth" class="form-control" required/>
                <span asp-validation-for="AccountInfo.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 200%">
                <label asp-for="AccountInfo.Address" class="control-label"></label>
                <input asp-for="AccountInfo.Address" class="form-control" required/>
                <span asp-validation-for="AccountInfo.Address" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 200%">
                <label asp-for="AccountInfo.RoleId" class="control-label"></label>
                <select asp-for="AccountInfo.RoleId" class ="form-control" asp-items="ViewBag.RoleId"></select>
            </div>
            
            <div class="form-group" style="width: 200%">
                <label asp-for="AccountInfo.StoreId" class="control-label"></label>
                <select asp-for="AccountInfo.StoreId" class ="form-control" asp-items="ViewBag.StoreId"></select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-page="Index">Back to List</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

}
else{
    Response.Redirect("/Login/LoginPage");
}