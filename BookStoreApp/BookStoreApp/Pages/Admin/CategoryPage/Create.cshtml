@page
@model BookStoreApp.Pages.Admin.CategoryPage.CreateModel
@{
}
@if(@Model.Role == "1")
{
    <h1>Create New Category</h1>
    @if (@Model.Msg != null)
    { 
        <p style="color: red;margin-left: 100px;margin-top: 15px;">@Model.Msg</p>
    }
    <hr />
<div class="row">
    <div class="col-lg-12" style="margin-left: -550%; margin-top: 25%">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="width: 200%">
                <label asp-for="Category.Name" class="control-label"></label>
                <input asp-for="Category.Name" class="form-control" required/>
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 200%">
                <label asp-for="Category.Description" class="control-label"></label>
                <input asp-for="Category.Description" class="form-control" required/>
                <span asp-validation-for="Category.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-page="Index">Back to List</a>
        </div>
    </div>
</div>


}
else{
    Response.Redirect("/Login/LoginPage");
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}