@page
@model BookStoreApp.Pages.Admin.StorePage.EditModel
@{
}
@if(@Model.Role == "1")
{
    <h1>Edit Store</h1>
    @if (@Model.Msg != null)
    { 
        <p style="color: red;margin-left: 100px;margin-top: 15px;">@Model.Msg</p>
    }
<hr />
<div class="row">
    <div class="col-lg-12" style="margin-left: -550%; margin-top: 25%">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Store.Id" />
            <div class="form-group" style="width: 200%">
                <label asp-for="Store.Name" class="control-label"></label>
                <input asp-for="Store.Name" class="form-control" required/>
                <span asp-validation-for="Store.Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 200%">
                <label asp-for="Store.Address" class="control-label"></label>
                <input asp-for="Store.Address" class="form-control" required/>
                <span asp-validation-for="Store.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-page="./Index">Back to List</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
}
else{
    Response.Redirect("/Login/LoginPage");
}